{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:nodemon": "nodemon",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standards",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node"
  },
  "devDependencies": {
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.1",
    "rimraf": "3.0.2",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "11.5.0",
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/express": "4.17.21",
    "chalk": "5.3.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-handler": "1.2.0",
    "got": "^11.8.2",
    "http-status-codes": "2.3.0",
    "inversify": "6.0.2",
    "json-server": "^1.0.0-alpha.23",
    "mongoose": "7.5.3",
    "nodemon": "3.1.0",
    "pino": "8.19.0",
    "pino-pretty": "^11.0.0",
    "reflect-metadata": "0.2.2",
    "tslib": "2.6.2"
  }
}
